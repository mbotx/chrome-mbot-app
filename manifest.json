{
  "manifest_version": 2,
  "name": "MindMakers-mBot for ScratchX",
  "short_name": "MindMakers-mBot",
  "description": "",
  "version": "0.1.0",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "./src/web/assets/icon_16.png",
    "128": "./src/web/assets/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["src/app/background.js"],
      "persistent": true
    }
  },
  "permissions": [ 
    "serial",
    "hid",
    "usb",
    {
      "usbDevices" : [
            {
               "vendorId" : 1046,
               "productId" : 65535
            }
         ]
     },
    "http://*/*",
    "https://*/*"
  ],
  "sandbox":{
    "pages":[
      "src/web/index.html"
    ]
  },
  "externally_connectable": {
    "matches": ["*://localhost/*","*://scratchx.org/*","*://machinelearningforkids.co.uk/*"]
  }
}
